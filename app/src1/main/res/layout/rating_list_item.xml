<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    app:cardElevation="@dimen/dimen5"
    android:paddingLeft="@dimen/dimen5"
    android:paddingRight="@dimen/dimen5"
    card_view:cardCornerRadius="@dimen/dimen5"
    android:paddingEnd="@dimen/dimen5"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:paddingStart="@dimen/dimen5">
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.sawatruck.loader.view.design.CustomTextView
                    android:id="@+id/txt_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5"
                    android:orientation="horizontal">

                    <com.sawatruck.loader.view.design.CustomTextView
                        android:id="@+id/txt_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="14dp" />

                </LinearLayout>

                <com.fuzzproductions.ratingbar.RatingBar
                    android:id="@+id/rating_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5"
                    app:emptyDrawable="@drawable/ic_star_border_amber_18dp"
                    app:filledDrawable="@drawable/ic_star_amber_18dp"
                    app:isIndicator="true"
                    app:rating="5"
                    app:starMargin="10dp"
                    app:starSize="15dp"
                    app:starSpacing="1dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5"
                    android:orientation="horizontal">

                    <com.sawatruck.loader.view.design.CustomTextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen5"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="12dp" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/profile_photo_size"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen10"
                android:layout_marginStart="@dimen/dimen10">

                <com.sawatruck.loader.view.design.CircularImage
                    android:id="@+id/img_avatar"
                    android:layout_width="@dimen/profile_photo_size"
                    android:layout_height="@dimen/profile_photo_size"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen10"
                    app:srcCompat="@drawable/ico_user"
                    android:layout_marginEnd="@dimen/dimen10"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>