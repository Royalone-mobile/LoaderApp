<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLightWhite"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <!-- Thumbnail Image -->
    <LinearLayout
        android:id="@+id/leftItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.sawatruck.loader.view.design.CustomTextView
                android:id="@+id/txt_left_timeago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:singleLine="true"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">


                <com.sawatruck.loader.view.design.CustomTextView
                    android:id="@+id/txt_left_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:text="" />

                <com.sawatruck.loader.view.design.CircularImage
                    android:id="@+id/img_leftUser"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:minHeight="16dp"
                    android:minWidth="16dp"
                    android:src="@drawable/ico_user"
                    app:circular_border_width="0dp"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_leftImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="480dp" />

                    <com.sawatruck.loader.view.design.CustomTextView
                        android:id="@+id/txt_left_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/weak_round_white"
                        android:paddingBottom="@dimen/dimen10"
                        android:paddingLeft="@dimen/dimen20"
                        android:paddingRight="@dimen/dimen20"
                        android:paddingTop="@dimen/dimen10"
                        android:singleLine="false"
                        android:textColor="@color/colorDarkBlack"
                        android:textSize="16dp"
                        android:textStyle="normal"
                        emojicon:emojiconSize="24dp"
                        android:paddingEnd="@dimen/dimen20"
                        android:paddingStart="@dimen/dimen20" />
                </LinearLayout>

                <com.sawatruck.loader.view.design.CustomTextView
                    android:id="@+id/divider"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="vertical">

            <com.sawatruck.loader.view.design.CustomTextView
                android:id="@+id/txt_right_timeago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:singleLine="true"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.sawatruck.loader.view.design.CustomTextView
                    android:id="@+id/textView3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_rightImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="480dp" />

                    <com.sawatruck.loader.view.design.CustomTextView
                        android:id="@+id/txt_right_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/weak_round_white"
                        android:paddingBottom="@dimen/dimen10"
                        android:paddingLeft="@dimen/dimen20"
                        android:paddingRight="@dimen/dimen20"
                        android:paddingTop="@dimen/dimen10"
                        android:singleLine="false"
                        android:textColor="@color/colorDarkBlack"
                        android:textSize="16dp"
                        android:textStyle="normal"
                        emojicon:emojiconSize="24dp"
                        android:paddingStart="@dimen/dimen20"
                        android:paddingEnd="@dimen/dimen20" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">


                <com.sawatruck.loader.view.design.CustomTextView
                    android:id="@+id/txt_right_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:text="" />

                <com.sawatruck.loader.view.design.CircularImage
                android:id="@+id/img_rightUser"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:minHeight="16dp"
                android:minWidth="16dp"
                android:src="@drawable/ico_user"
                app:circular_border_width="0dp"
                    android:layout_marginStart="10dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>