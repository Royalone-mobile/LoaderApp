<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dimen10"
        android:paddingRight="@dimen/dimen10"
        android:background="#F5F5F5"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen10"
        android:paddingEnd="@dimen/dimen10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen10"
                android:layout_marginTop="@dimen/dimen10"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.sawatruck.loader.view.design.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/photo_to_share"
                    android:textAllCaps="true"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <com.sawatruck.loader.view.design.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5"
                    android:text="@string/optional"
                    android:textColor="@color/colorDarkGray" />
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen5"
            android:paddingRight="@dimen/dimen5"
            app:cardElevation="@dimen/dimen5"
            card_view:cardCornerRadius="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:paddingEnd="@dimen/dimen5"
            android:paddingStart="@dimen/dimen5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen20"
                android:layout_marginRight="@dimen/dimen20"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen10"
                android:paddingTop="@dimen/dimen10"
                android:layout_marginEnd="@dimen/dimen20"
                android:layout_marginStart="@dimen/dimen20">

                <LinearLayout
                    android:id="@+id/view_take_photo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ico_takephoto" />

                        <com.sawatruck.loader.view.design.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen20"
                            android:gravity="center_vertical"
                            android:text="@string/take_photo"
                            android:layout_marginStart="@dimen/dimen20" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGray"></LinearLayout>

                <LinearLayout
                    android:id="@+id/view_upload_photo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ico_uploadphoto" />

                        <com.sawatruck.loader.view.design.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen20"
                            android:gravity="center_vertical"
                            android:text="@string/upload_photo"
                            android:layout_marginStart="@dimen/dimen20" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen10"
                android:layout_marginTop="@dimen/dimen30"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.sawatruck.loader.view.design.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/want_choose_truck"
                    android:textAllCaps="true"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <com.sawatruck.loader.view.design.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5"
                    android:text="@string/optional"
                    android:textColor="@color/colorDarkGray" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="#F5F5F5"
            android:orientation="vertical">

            <com.sawatruck.loader.view.design.CustomTextView
                android:id="@+id/txt_package_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen30"
                android:text="@string/truck_details"
                android:textColor="@color/colorLightBlack"
                android:textSize="16dp"
                android:layout_marginStart="@dimen/dimen30" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen5"
                android:paddingRight="@dimen/dimen5"
                app:cardElevation="@dimen/dimen5"
                card_view:cardCornerRadius="5dp"
                android:paddingEnd="@dimen/dimen5"
                android:paddingStart="@dimen/dimen5"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp">>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen5">

                    <com.weiwangcn.betterspinner.library.BetterSpinner
                        android:id="@+id/spinner_vehicle_class"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:hint="@string/vehicle_class"
                        android:textColorHint="@color/colorGray"
                        android:paddingBottom="@dimen/dimen15"
                        android:paddingTop="@dimen/dimen15"
                        android:visibility="gone"
                        android:textSize="16dp"
                        />

                    <com.weiwangcn.betterspinner.library.BetterSpinner
                        android:id="@+id/spinner_vehicle_bodywork"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:hint="@string/vehicle_bodywork"
                        android:textColorHint="@color/colorGray"
                        android:paddingBottom="@dimen/dimen15"
                        android:textSize="16dp"
                        android:visibility="gone"
                        android:paddingTop="@dimen/dimen15" />

                    <com.weiwangcn.betterspinner.library.BetterSpinner
                        android:id="@+id/spinner_vehicle_type"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:textColorHint="@color/colorGray"
                        android:hint="@string/vehicle_type"
                        android:paddingBottom="@dimen/dimen15"
                        android:textSize="16dp"
                        android:paddingTop="@dimen/dimen15" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorOrange"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen20"
            android:paddingRight="@dimen/dimen20"
            android:paddingEnd="@dimen/dimen20"
            android:paddingStart="@dimen/dimen20">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_white_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#E58102">

        </LinearLayout>

        <com.sawatruck.loader.view.design.CustomTextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/btn_next"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="17dp" />
    </LinearLayout>

</LinearLayout>