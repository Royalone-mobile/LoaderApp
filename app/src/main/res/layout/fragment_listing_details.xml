<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_load_photo"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    app:srcCompat="@drawable/ico_truck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:layout_marginRight="@dimen/dimen20"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/dimen20"
                    android:layout_marginEnd="@dimen/dimen20">

                    <com.sawatruck.loader.view.design.CustomTextView
                        android:id="@+id/txt_load_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="16dp" />

                    <com.sawatruck.loader.view.design.CustomTextView
                        android:id="@+id/txt_load_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen5"
                        android:layout_marginTop="@dimen/dimen5"
                        android:textColor="@color/colorGray"
                        android:layout_marginStart="@dimen/dimen5" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen20">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ico_loads" />

                                <com.sawatruck.loader.view.design.CustomTextView
                                    android:id="@+id/txt_load_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/dimen5"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dimen5" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ico_delivered" />

                                <com.sawatruck.loader.view.design.CustomTextView
                                    android:id="@+id/txt_delivery_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/dimen5"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dimen5" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F5F5F5"
                            android:orientation="vertical"
                            android:padding="30dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal">

                                <com.sawatruck.loader.view.design.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/upload_date_item"
                                    android:textColor="@color/colorDarkGray" />

                                <com.sawatruck.loader.view.design.CustomTextView
                                    android:id="@+id/txt_load_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen5"
                                    android:textColor="@color/colorDarkGray"
                                    android:layout_marginStart="@dimen/dimen5" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen5"
                                android:orientation="horizontal">

                                <com.sawatruck.loader.view.design.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/delivery_date_item"
                                    android:textColor="@color/colorDarkGray" />

                                <com.sawatruck.loader.view.design.CustomTextView
                                    android:id="@+id/txt_delivery_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen5"
                                    android:textColor="@color/colorDarkGray"
                                    android:layout_marginStart="@dimen/dimen5" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen5"
                                android:orientation="horizontal">

                                <com.sawatruck.loader.view.design.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/distance_item"
                                    android:textColor="@color/colorDarkGray" />

                                <com.sawatruck.loader.view.design.CustomTextView
                                    android:id="@+id/txt_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen5"
                                    android:textColor="@color/colorDarkGray"
                                    android:layout_marginStart="@dimen/dimen5" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen5"
                                android:orientation="horizontal">

                                <com.sawatruck.loader.view.design.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/load_details_item"
                                    android:textColor="@color/colorDarkGray" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen5"
                                android:orientation="horizontal">

                                <com.sawatruck.loader.view.design.CustomTextView
                                    android:id="@+id/txt_load_details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorDarkGray" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_showmap"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="75dp"
                        android:background="@drawable/sharp_round_whitebutton"
                        android:foregroundGravity="center"
                        android:text="@string/btn_showmap"
                        android:textAllCaps="false"

                        android:textColor="@color/colorPrimary" />

                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.sawatruck.loader.view.design.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen30"
                        android:paddingLeft="@dimen/dimen10"
                        android:paddingRight="@dimen/dimen10"
                        android:text="@string/your_offer"
                        android:textColor="@color/colorBlue"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/dimen10"
                        android:layout_marginStart="@dimen/dimen30"
                        android:paddingEnd="@dimen/dimen10" />

                    <com.sawatruck.loader.view.design.CustomTextView
                        android:id="@+id/txt_budget_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlue"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:cardElevation="@dimen/dimen5"
            android:paddingLeft="@dimen/dimen5"
            android:paddingRight="@dimen/dimen5"
            card_view:cardCornerRadius="@dimen/dimen5"
            android:layout_marginEnd="20dp"
            android:paddingStart="@dimen/dimen5"
            android:layout_marginStart="20dp"
            android:paddingEnd="@dimen/dimen5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dimen10"
                android:paddingTop="@dimen/dimen10"
                android:paddingBottom="@dimen/dimen10"
                android:paddingRight="@dimen/dimen10"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimen10"
                android:paddingEnd="@dimen/dimen10">

                <LinearLayout
                    android:id="@+id/btn_invite_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        card_view:srcCompat="@drawable/ico_adduser" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/invite_driver"
                        android:textAllCaps="true"
                        android:layout_marginLeft="@dimen/dimen5"
                        android:layout_marginRight="@dimen/dimen5"
                        android:textColor="@color/colorDarkGray"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/dimen5"
                        android:layout_marginEnd="@dimen/dimen5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorOrange"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_sneakpeek"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen10"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/dimen10">

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        card_view:srcCompat="@drawable/ico_adduser" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen5"
                        android:layout_marginRight="@dimen/dimen5"
                        android:text="@string/sneak_peek"
                        android:textAllCaps="true"
                        android:textColor="@color/colorDarkGray"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/dimen5"
                        android:layout_marginEnd="@dimen/dimen5" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>